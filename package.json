{
  "name": "ccode-vscode-plugin",
  "publisher": "local",
  "displayName": "CCUsage Status Bar",
  "description": "Secure, optimized VSCode extension for displaying CCUsage metrics in status bar with comprehensive security and performance improvements",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ccusageStatusBar.refresh",
        "title": "Refresh CCUsage Status"
      },
      {
        "command": "ccusageStatusBar.showOutput",
        "title": "Show CCUsage Output"
      },
      {
        "command": "ccusageStatusBar.openTerminal",
        "title": "Open CCUsage in Terminal"
      }
    ],
    "configuration": {
      "title": "CCUsage Status Bar",
      "properties": {
        "ccusageStatusBar.command": {
          "type": "string",
          "default": "npx ccusage@latest blocks",
          "description": "CCUsage command to execute and display in status bar"
        },
        "ccusageStatusBar.interval": {
          "type": "number",
          "default": 30000,
          "description": "Execution interval in milliseconds (0 to disable auto-refresh)"
        },
        "ccusageStatusBar.maxLength": {
          "type": "number",
          "default": 50,
          "description": "Maximum characters to display in status bar"
        },
        "ccusageStatusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the CCUsage status bar display"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test",
    "test:unit": "npm run compile && node out/test/unit/runTests.js",
    "test:integration": "npm run compile && node out/test/integration/runTests.js",
    "test:coverage": "npm run compile && npm run test:unit && npm run test:integration",
    "test:watch": "npm run compile && npm run test:unit -- --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1"
  }
}
